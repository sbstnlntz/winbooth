<UserControl x:Class="FotoboxApp.Views.UserMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:FotoboxApp.Converters"
    Background="White"
    MinWidth="900" MinHeight="620">

    <UserControl.Resources>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Border BorderBrush="Black" BorderThickness="2" Margin="12" CornerRadius="4">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.7*"/>
            </Grid.ColumnDefinitions>

            <!-- Titel & Fertig -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="EINSTELLUNGEN"
                       FontWeight="Bold"
                       FontSize="44"
                       Foreground="Black"
                       VerticalAlignment="Top"
                       Margin="0,0,0,10"/>
            <Button Grid.Row="0" Grid.Column="1"
                    Content="✔"
                    Width="66" Height="66"
                    FontSize="34" FontWeight="Bold"
                    Background="#16E000"
                    Foreground="White"
                    BorderBrush="#16E000"
                    BorderThickness="2"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="Back_Click"
                    Cursor="Hand"/>

            <!-- Einstellungen + Geräteinfos -->
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,18,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.15*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Linke Spalte: Einstellungen -->
                <StackPanel Grid.Column="0" VerticalAlignment="Top">

                    <!-- Countdown-Zeit Slider -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,14" VerticalAlignment="Center">
                        <TextBlock Text="Countdown" FontWeight="Bold" FontSize="22" Width="142"/>
                        <TextBlock Text="3" FontSize="16" VerticalAlignment="Center" Width="22" HorizontalAlignment="Left"/>
                        <Slider Minimum="3" Maximum="15" Value="{Binding PreviewDurationSeconds, Mode=TwoWay}" 
                                TickFrequency="1" IsSnapToTickEnabled="True"
                                Width="120" Margin="4,0"/>
                        <TextBlock Text="15" FontSize="16" VerticalAlignment="Center" Width="26" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding PreviewDurationSeconds, StringFormat={}{0} Sek.}" FontSize="18" VerticalAlignment="Center" Margin="14,0"/>
                    </StackPanel>

                    <!-- Direktdruck -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <CheckBox IsChecked="{Binding Direktdruck, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,12,0" Width="24" Height="24"/>
                        <TextBlock Text="Direktdruck" FontWeight="Bold" FontSize="22" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Drucken ist deaktiviert, Bild wird nur in der Galerie gespeichert."
                               Visibility="{Binding Direktdruck, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                               Foreground="Gray" FontSize="14" Margin="16,0,0,8"/>

                    <!-- Galerie -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                        <CheckBox IsChecked="{Binding GalerieButton, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,12,0" Width="24" Height="24"/>
                        <TextBlock Text="Galerie" FontWeight="Bold" FontSize="22" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- Foto-Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,18">
                        <CheckBox IsChecked="{Binding FotoFilter, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,12,0" Width="24" Height="24"/>
                        <TextBlock Text="Foto-Filter" FontWeight="Bold" FontSize="22" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- Foto Design Überschrift -->
                    <TextBlock Text="Foto Design" FontWeight="Bold" FontSize="22" Margin="0,12,0,6"/>
                    <!-- Template-Slots (Designs) -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <!-- Slot 1 -->
                        <Grid Width="170" Height="120" Margin="0,0,14,0">
                            <Rectangle Stroke="#222" StrokeThickness="2" RadiusX="7" RadiusY="7"
                                       StrokeDashArray="4,3" Fill="White"/>
                            <Grid>
                                <Image x:Name="SelectedTemplatePreview1"
                                       Width="150" Height="90"
                                       Stretch="Uniform"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Visibility="Collapsed"/>
                                <Button x:Name="SelectTemplateBtn1"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="SelectTemplateBtn1_Click"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"/>
                                <Button x:Name="DeleteTemplateBtn1"
                                        Width="30" Height="30"
                                        Click="DeleteTemplateBtn1_Click"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Margin="0,0,4,4"
                                        Visibility="Collapsed"
                                        ToolTip="Auswahl löschen"
                                        Background="Transparent"
                                        BorderThickness="0">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" FontSize="22" Foreground="#444"/>
                                </Button>
                                <TextBlock x:Name="PlusIcon1" Text="+" FontSize="55" FontWeight="Bold" Foreground="#FF8600"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible"/>
                            </Grid>
                        </Grid>
                        <!-- Slot 2 -->
                        <Grid Width="170" Height="120">
                            <Rectangle Stroke="#222" StrokeThickness="2" RadiusX="7" RadiusY="7"
                                       StrokeDashArray="4,3" Fill="White"/>
                            <Grid>
                                <Image x:Name="SelectedTemplatePreview2"
                                       Width="150" Height="90"
                                       Stretch="Uniform"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Visibility="Collapsed"/>
                                <Button x:Name="SelectTemplateBtn2"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="SelectTemplateBtn2_Click"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"/>
                                <Button x:Name="DeleteTemplateBtn2"
                                        Width="30" Height="30"
                                        Click="DeleteTemplateBtn2_Click"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Margin="0,0,4,4"
                                        Visibility="Collapsed"
                                        ToolTip="Auswahl löschen"
                                        Background="Transparent"
                                        BorderThickness="0">
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" FontSize="22" Foreground="#444"/>
                                </Button>
                                <TextBlock x:Name="PlusIcon2" Text="+" FontSize="55" FontWeight="Bold" Foreground="#FF8600"
                                           HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible"/>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </StackPanel>

                <!-- Rechte Spalte: Geräteinformationen -->
                <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="38,0,0,0">
                    <!-- Kamera -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                        <TextBlock Text="Kamera" FontWeight="Bold" FontSize="19" Margin="0,0,6,0"/>
                        <!-- <Border Background="#d70000" CornerRadius="6" Padding="4,0" Margin="0,0,7,0" VerticalAlignment="Center">
                            <TextBlock Text="⟳ 180°" FontSize="13" FontWeight="Bold" Foreground="White"/>
                        </Border> -->
                        <TextBlock Text="{Binding SelectedCameraName}" FontSize="19" VerticalAlignment="Center" Margin="0,0,7,0"/>
                        <Button Width="28" Height="28" Margin="0,0,0,0"
                Click="CameraSettings_Click"
                ToolTip="Kamera auswählen">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="16"/>
                        </Button>
                    </StackPanel>

                    <!-- Drucker -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                        <TextBlock Text="Drucker" FontWeight="Bold" FontSize="19" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding SelectedPrinterName}" FontSize="19" VerticalAlignment="Center" Margin="0,0,7,0"/>
                        <Button Width="28" Height="28" Margin="0,0,0,0"
                Click="PrinterSettings_Click"
                ToolTip="Drucker auswählen">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="16"/>
                        </Button>
                    </StackPanel>

                    <!-- USB-Laufwerk -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="USB Laufwerk" FontWeight="Bold" FontSize="19" Margin="0,0,7,0"/>
                        <TextBlock Text="D:\" FontSize="19" VerticalAlignment="Center" Margin="0,0,7,0"/>
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="17" Foreground="#222" VerticalAlignment="Center" Margin="2,0,0,0"/>
                    </StackPanel>
                </StackPanel>

               
            </Grid>
        </Grid>
    </Border>
</UserControl>
