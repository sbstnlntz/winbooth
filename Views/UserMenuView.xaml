<!-- Layout for the user menu screen with quick settings, gallery controls, and template slots. -->
<UserControl x:Class="winbooth.Views.UserMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:winbooth.Converters"
    Background="White">

    <UserControl.Resources>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="UserActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="MinWidth" Value="140"/>
        </Style>
    </UserControl.Resources>

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Border Width="1280" Height="800" BorderBrush="Black" BorderThickness="2" Margin="12" CornerRadius="4">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.7*"/>
            </Grid.ColumnDefinitions>

            <!-- Title row with the Done button -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="EINSTELLUNGEN"
                       FontWeight="Bold"
                       FontSize="44"
                       Foreground="Black"
                       VerticalAlignment="Top"
                       Margin="0,0,0,10"/>
            <Button Grid.Row="0" Grid.Column="1"
                    Style="{StaticResource FB_DialogCloseButtonStyle}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="Back_Click"/>

            <!-- Settings plus device info columns -->
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,18,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.15*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Left column with settings controls -->
                <ScrollViewer Grid.Column="0"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>

                    <!-- Countdown duration slider -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,14" VerticalAlignment="Center">
                        <TextBlock Text="Countdown" FontWeight="Bold" FontSize="22" Width="142"/>
                        <TextBlock Text="3" FontSize="16" VerticalAlignment="Center" Width="22" HorizontalAlignment="Left"/>
                        <Slider Minimum="3" Maximum="15" Value="{Binding PreviewDurationSeconds, Mode=TwoWay}" 
                                TickFrequency="1" IsSnapToTickEnabled="True"
                                Width="120" Margin="4,0"/>
                        <TextBlock Text="15" FontSize="16" VerticalAlignment="Center" Width="26" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding PreviewDurationSeconds, StringFormat={}{0} Sek.}" FontSize="18" VerticalAlignment="Center" Margin="14,0"/>
                    </StackPanel>

                    <!-- Direct print toggle -->
                    <StackPanel Margin="0,0,0,6"
                                Visibility="{Binding AllowDirektdruck, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding Direktdruck, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock Text="Direktdruck" FontWeight="Bold" FontSize="22" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Gallery actions -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,6"
                                Visibility="{Binding AllowGalerie, Converter={StaticResource BoolToVisibilityConverter}}">
                        <CheckBox IsChecked="{Binding GalerieButton, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="Galerie" FontWeight="Bold" FontSize="22" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- Photo filter toggle -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,18"
                                Visibility="{Binding AllowFotoFilter, Converter={StaticResource BoolToVisibilityConverter}}">
                        <CheckBox IsChecked="{Binding FotoFilter, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Text="Foto-Filter" FontWeight="Bold" FontSize="22" VerticalAlignment="Center"/>
                    </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Right column with device information -->
                <Grid Grid.Column="1" Margin="38,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                    <!-- Camera summary -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                        <TextBlock Text="Kamera" FontWeight="Bold" FontSize="19" Width="120"/>
                        <StackPanel Width="220" Margin="8,0,0,0">
                            <TextBlock Text="{Binding SelectedCameraName}" FontSize="19" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding CameraRotationSummary}" FontSize="14" Foreground="#666" Margin="0,2,0,0"/>
                        </StackPanel>
                        <Button Width="34" Height="34" Margin="8,0,0,0"
                                Background="#D93030"
                                Foreground="White"
                                BorderBrush="#B02020"
                                BorderThickness="2"
                                ToolTip="Kamera 180° drehen"
                                Click="ToggleCameraRotationUser_Click">
                            <TextBlock Text="180°" FontSize="14" FontWeight="Bold"/>
                        </Button>
                        <Button Width="28" Height="28" Margin="6,0,0,0"
                                Click="CameraSettings_Click"
                                ToolTip="Kamera auswählen">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="16"/>
                        </Button>
                    </StackPanel>

                    <!-- Printer summary -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                        <TextBlock Text="Drucker" FontWeight="Bold" FontSize="19" Width="120"/>
                        <TextBlock Text="{Binding SelectedPrinterName}" FontSize="19" Margin="8,0,0,0" Width="220" TextWrapping="Wrap"/>
                        <Button Width="28" Height="28" Margin="6,0,0,0"
                                Click="PrinterSettings_Click"
                                ToolTip="Drucker auswählen">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="16"/>
                        </Button>
                    </StackPanel>

                    <!-- USB storage summary -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                        <TextBlock Text="USB Speicher" FontWeight="Bold" FontSize="19" Width="120"/>
                        <TextBlock Text="{Binding UsbDriveSummary}" FontSize="19" Margin="8,0,0,0" Width="220" TextWrapping="Wrap"/>
                        <Button Width="28" Height="28" Margin="6,0,0,0"
                                Click="UsbSettings_Click"
                                ToolTip="USB-Speicher auswählen">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE898;" FontSize="16"/>
                        </Button>
                    </StackPanel>

                    <!-- Photo design slots -->
                    <StackPanel Margin="24,24,0,0"
                                HorizontalAlignment="Right">
                        <TextBlock Text="Foto Design"
                                   FontWeight="Bold"
                                   FontSize="22"
                                   Margin="0,0,0,10"
                                   HorizontalAlignment="Right"/>
                        <StackPanel>
                            <!-- Slot 1 preview -->
                            <Grid HorizontalAlignment="Right"
                                  Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid Width="170" Height="120">
                                    <Rectangle Stroke="#222" StrokeThickness="2" RadiusX="7" RadiusY="7"
                                               StrokeDashArray="4,3" Fill="White"/>
                                    <Grid>
                                        <Image x:Name="SelectedTemplatePreview1"
                                               Width="150" Height="90"
                                               Stretch="Uniform"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Visibility="Collapsed"/>
                                        <Button x:Name="SelectTemplateBtn1"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Click="SelectTemplateBtn1_Click"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"/>
                                        <TextBlock x:Name="PlusIcon1" Text="+" FontSize="55" FontWeight="Bold" Foreground="#FF8600"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible"/>
                                    </Grid>
                                </Grid>
                                <Button x:Name="DeleteTemplateBtn1"
                                        Grid.Column="1"
                                        Width="40"
                                        Height="40"
                                        Margin="6,0,0,0"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        ToolTip="Auswahl löschen"
                                        Click="DeleteTemplateBtn1_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedTemplate1}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" FontSize="22" Foreground="#444"/>
                                </Button>
                            </Grid>
                            <!-- Slot 2 preview -->
                            <Grid x:Name="TemplateSlot2"
                                  HorizontalAlignment="Right"
                                  Margin="0,12,0,0">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding AllowTwoTemplates}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid Width="170" Height="120">
                                    <Rectangle Stroke="#222" StrokeThickness="2" RadiusX="7" RadiusY="7"
                                               StrokeDashArray="4,3" Fill="White"/>
                                    <Grid>
                                        <Image x:Name="SelectedTemplatePreview2"
                                               Width="150" Height="90"
                                               Stretch="Uniform"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Visibility="Collapsed"/>
                                        <Button x:Name="SelectTemplateBtn2"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Click="SelectTemplateBtn2_Click"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"/>
                                        <TextBlock x:Name="PlusIcon2" Text="+" FontSize="55" FontWeight="Bold" Foreground="#FF8600"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible"/>
                                    </Grid>
                                </Grid>
                                <Button x:Name="DeleteTemplateBtn2"
                                        Grid.Column="1"
                                        Width="40"
                                        Height="40"
                                        Margin="6,0,0,0"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        ToolTip="Auswahl löschen"
                                        Click="DeleteTemplateBtn2_Click">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedTemplate2}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;" FontSize="22" Foreground="#444"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                        <Button Content="Eigenes Design hochladen"
                                Style="{StaticResource UserActionButtonStyle}"
                                Margin="0,16,0,0"
                                HorizontalAlignment="Right"
                                Click="UploadTemplate_Click"/>
                    </StackPanel>

                        </StackPanel>
                    </ScrollViewer>

                </Grid>


            </Grid>
        </Grid>
    </Border>
    </Viewbox>
</UserControl>



