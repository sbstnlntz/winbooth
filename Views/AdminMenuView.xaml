<!-- Admin dashboard layout with tabbed settings, overlays, and device information. -->
<UserControl x:Class="winbooth.Views.AdminMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utilities="clr-namespace:winbooth.Utilities"
             Background="White">
    <UserControl.Resources>
        <utilities:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <Style x:Key="AdminActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="Width" Value="220"/>
        </Style>
    </UserControl.Resources>
    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Border Width="1280" Height="800" BorderBrush="Black" BorderThickness="2" Margin="12" CornerRadius="4">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.7*"/>
            </Grid.ColumnDefinitions>

            <!-- Title row and back button styled to match the user menu -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="ADMIN"
                       FontWeight="Bold"
                       FontSize="44"
                       Foreground="Black"
                       VerticalAlignment="Top"
                       Margin="0,0,0,10"/>
            <Button Grid.Row="0" Grid.Column="1"
                    Style="{StaticResource FB_DialogCloseButtonStyle}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="Back_Click"/>

            <!-- Main area arranged in two columns -->
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,18,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.15*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Left column with settings controls -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Allgemein" FontWeight="Bold" FontSize="22" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                                <TextBlock Text="Aktueller Name" FontWeight="Bold" FontSize="20" Width="160"/>
                                <Border Background="#F0F0F0" Padding="10,6" CornerRadius="8">
                                    <TextBlock Text="{Binding CurrentGalleryDisplayName}" FontSize="18" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                            <CheckBox Content="Direktdruck"
                                      FontSize="22"
                                      Margin="0,0,0,8"
                                      IsChecked="{Binding AllowDirektdruck, Mode=TwoWay}"/>
                            <CheckBox Content="Galerie"
                                      FontSize="22"
                                      Margin="0,0,0,8"
                                      IsChecked="{Binding AllowGalerie, Mode=TwoWay}"/>
                            <CheckBox Content="Foto-Filter"
                                      FontSize="22"
                                      Margin="0,0,0,8"
                                      IsChecked="{Binding AllowFotoFilter, Mode=TwoWay}"/>
                            <CheckBox Content="2 Designs"
                                      FontSize="22"
                                      Margin="0,0,0,8"
                                      IsChecked="{Binding AllowTwoTemplates, Mode=TwoWay}"/>
                            <Button Content="Verzögerungen"
                                    Style="{StaticResource AdminActionButtonStyle}"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,12"
                                    Click="OpenDelaySettings_Click"/>
                            <Button Content="Standard-Design"
                                    Style="{StaticResource AdminActionButtonStyle}"
                                    Margin="0,0,0,8"
                                    HorizontalAlignment="Left"
                                    Click="OpenDefaultTemplate_Click"/>
                            <Button Content="Grafiken bearbeiten"
                                    Style="{StaticResource AdminActionButtonStyle}"
                                    Margin="0,0,0,8"
                                    HorizontalAlignment="Left"
                                    Click="OpenGraphicsManager_Click"/>
                            <Button Content="Designs / Templates"
                                    Style="{StaticResource AdminActionButtonStyle}"
                                    Margin="0,0,0,8"
                                    HorizontalAlignment="Left"
                                    Click="OpenDesignSettings_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Right column with device information and stats -->
                <Grid Grid.Column="1" Margin="38,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                            <TextBlock Text="Kamera" FontWeight="Bold" FontSize="19" Width="120"/>
                            <StackPanel Width="220" Margin="8,0,0,0">
                                <TextBlock Text="{Binding AllowedCamerasSummary}"
                                           FontSize="19"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding CameraRotationSummary}"
                                           FontSize="14"
                                           Foreground="#666"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            <Button Width="34"
                                    Height="34"
                                    ToolTip="Kamera 180° drehen"
                                    Margin="6,0,0,0"
                                    Background="#D93030"
                                    Foreground="White"
                                    BorderBrush="#B02020"
                                    BorderThickness="2"
                                    Click="ToggleCameraRotation_Click">
                                <TextBlock Text="180°" FontSize="14" FontWeight="Bold"/>
                            </Button>
                            <Button Width="28"
                                    Height="28"
                                    ToolTip="Kamera-Auswahl"
                                    Margin="6,0,0,0"
                                    Click="CameraSettingsAdmin_Click">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="16"/>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                            <TextBlock Text="Drucker" FontWeight="Bold" FontSize="19" Width="120"/>
                            <TextBlock Text="{Binding AllowedPrintersSummary}"
                                       FontSize="19"
                                       Margin="8,0,0,0"
                                       Width="220"
                                       TextWrapping="Wrap"/>
                            <Button Width="28"
                                    Height="28"
                                    ToolTip="Drucker-Auswahl"
                                    Margin="6,0,0,0"
                                    Click="PrinterSettingsAdmin_Click">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="16"/>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                            <TextBlock Text="USB Speicher" FontWeight="Bold" FontSize="19" Width="120"/>
                            <TextBlock Text="{Binding UsbDriveSummary}"
                                       FontSize="19"
                                       Margin="8,0,0,0"
                                       Width="220"
                                       TextWrapping="Wrap"/>
                            <Button Width="28"
                                    Height="28"
                                    ToolTip="USB-Speicher auswählen"
                                    Margin="6,0,0,0"
                                    Click="UsbSettingsAdmin_Click">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE898;" FontSize="16"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,24,0,0">
                        <Button Content="Neues Event"
                                Style="{StaticResource AdminActionButtonStyle}"
                                Click="NewEvent_Click"/>
                        <Button Content="Archiv öffnen"
                                Style="{StaticResource AdminActionButtonStyle}"
                                Click="OpenArchive_Click"/>
                        <Button Content="Backup jetzt"
                                Style="{StaticResource AdminActionButtonStyle}"
                                Click="BackupNow_Click"/>
                        <Button Content="Programm beenden"
                                Style="{StaticResource AdminActionButtonStyle}"
                                Click="ShutdownApp_Click"/>
                        <Button Content="Fotobox ausschalten"
                                Style="{StaticResource AdminActionButtonStyle}"
                                Click="ShutdownSystem_Click"/>
                    </StackPanel>

                    <Border Grid.Row="3"
                            Margin="0,20,0,0"
                            Padding="16"
                            Background="#F7F7F7"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="12">
                        <StackPanel>
                            <TextBlock Text="Statistik"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Margin="0,0,0,12"/>
                            <TextBlock Text="{Binding CurrentGalleryDisplayName, StringFormat='Aktuelle Galerie: {0}'}"
                                       FontSize="15"
                                       Foreground="#555"
                                       Margin="0,0,0,12"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="Gesamt"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Margin="12,0,0,6"/>
                                <TextBlock Grid.Row="0" Grid.Column="2"
                                           Text="Event"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Margin="24,0,0,6"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Einzelfotos" FontSize="16"/>
                                <TextBlock Grid.Row="1" Grid.Column="1"
                                           Text="{Binding TotalSinglePhotos}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="12,0,0,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="2"
                                           Text="{Binding EventSinglePhotos}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="24,0,0,0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Collagen erstellt" FontSize="16" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1"
                                           Text="{Binding TotalCollagesCreated}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="12,8,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="2"
                                           Text="{Binding EventCollagesCreated}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="24,8,0,0"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Collagen gedruckt" FontSize="16" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1"
                                           Text="{Binding TotalCollagesPrinted}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="12,8,0,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="2"
                                           Text="{Binding EventCollagesPrinted}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="24,8,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- Overlay for creating a new event and requesting the gallery name -->
            <Grid x:Name="NewEventOverlay" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2"
                  Background="#88000000" Visibility="Collapsed">
                <Border Background="White" CornerRadius="10" Padding="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button Style="{StaticResource FB_DialogCloseButtonStyle}"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Click="NewEventCancel_Click"/>
                        <StackPanel Grid.Row="1" Margin="0,12,0,0">
                            <TextBlock Text="Neues Event anlegen" FontSize="24" FontWeight="Bold" Margin="0,0,0,12"/>
                            <TextBlock Text="Eventnummer (nur Zahlen)" FontWeight="Bold" Margin="0,0,0,6"/>
                            <Border Background="#F5F5F5" CornerRadius="6" Padding="4" Margin="0,0,0,6">
                                <TextBox x:Name="NewGalleryNameBox"
                                         Width="320"
                                         Height="48"
                                         FontSize="28"
                                         FontWeight="SemiBold"
                                         HorizontalContentAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         IsReadOnly="True"
                                         Focusable="False"
                                         BorderThickness="0"
                                         Background="Transparent"/>
                            </Border>
                            <UniformGrid Rows="4" Columns="3" HorizontalAlignment="Center" Margin="0,10,0,18">
                                <Button Content="1" Tag="1" Click="NewEventDigit_Click" Style="{StaticResource AdminActionButtonStyle}" Width="90" Height="70"/>
                                <Button Content="2" Tag="2" Click="NewEventDigit_Click" Style="{StaticResource AdminActionButtonStyle}" Width="90" Height="70"/>
                                <Button Content="3" Tag="3" Click="NewEventDigit_Click" Style="{StaticResource AdminActionButtonStyle}" Width="90" Height="70"/>
                                <Button Content="4" Tag="4" Click="NewEventDigit_Click" Style="{StaticResource AdminActionButtonStyle}" Width="90" Height="70"/>
                                <Button Content="5" Tag="5" Click="NewEventDigit_Click" Style="{StaticResource AdminActionButtonStyle}" Width="90" Height="70"/>
                                <Button Content="6" Tag="6" Click="NewEventDigit_Click" Style="{StaticResource AdminActionButtonStyle}" Width="90" Height="70"/>
                                <Button Content="7" Tag="7" Click="NewEventDigit_Click" Style="{StaticResource AdminActionButtonStyle}" Width="90" Height="70"/>
                                <Button Content="8" Tag="8" Click="NewEventDigit_Click" Style="{StaticResource AdminActionButtonStyle}" Width="90" Height="70"/>
                                <Button Content="9" Tag="9" Click="NewEventDigit_Click" Style="{StaticResource AdminActionButtonStyle}" Width="90" Height="70"/>
                                <Button Content="DEL" Click="NewEventBackspace_Click" Style="{StaticResource AdminActionButtonStyle}" Width="90" Height="70"/>
                                <Button Content="0" Tag="0" Click="NewEventDigit_Click" Style="{StaticResource AdminActionButtonStyle}" Width="90" Height="70"/>
                                <Button Content="OK" Click="NewEventConfirm_Click" Style="{StaticResource AdminActionButtonStyle}" Width="90" Height="70"/>
                            </UniformGrid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Overlay displaying available backups -->
            <Grid x:Name="BackupsOverlay" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2"
                  Background="#88000000" Visibility="Collapsed">
                <Border Background="White" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button Style="{StaticResource FB_DialogCloseButtonStyle}"
                                HorizontalAlignment="Right" VerticalAlignment="Top"
                                Click="CloseBackups_Click"/>
                        <Grid Grid.Row="1" MinWidth="480" MinHeight="320" Margin="0,20,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Text="Backups" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ListBox Grid.Row="1"
                                     x:Name="BackupsList"
                                     MinHeight="220"
                                     Margin="0,0,0,10"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ScrollViewer.PanningMode="VerticalOnly">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F5F5F5" Padding="10" Margin="0,0,0,6" CornerRadius="8">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding LastWriteTime, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" FontSize="12" Foreground="#666666"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,6">
                                <Button Content="Wiederherstellen" Width="180" Click="RestoreBackup_Click"
                                        Style="{StaticResource AdminActionButtonStyle}"
                                        IsEnabled="{Binding SelectedItem, ElementName=BackupsList, Converter={StaticResource NullToBoolConverter}}"/>
                                <Button Content="Backup kopieren" Width="180" Click="CopyBackup_Click"
                                        Style="{StaticResource AdminActionButtonStyle}"
                                        IsEnabled="{Binding SelectedItem, ElementName=BackupsList, Converter={StaticResource NullToBoolConverter}}"/>
                                <Button Content="Backup l�schen" Width="180" Click="DeleteBackup_Click"
                                        Style="{StaticResource AdminActionButtonStyle}"
                                        IsEnabled="{Binding SelectedItem, ElementName=BackupsList, Converter={StaticResource NullToBoolConverter}}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Ordner �ffnen" Width="180" Click="OpenBackupFolder_Click" Style="{StaticResource AdminActionButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            
        </Grid>
    </Border>
    </Viewbox>
</UserControl>
