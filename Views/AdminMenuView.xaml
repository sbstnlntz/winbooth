<UserControl x:Class="FotoboxApp.Views.AdminMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White"
             MinWidth="800"
             MinHeight="500">
    <Grid Margin="24">
        <!-- 0) ZURÜCK-BUTTON -->
        <Button Content="← Zurück"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Padding="8,4"
                Click="Back_Click"/>

        <!-- 1) HEADER -->
        <TextBlock Text="ADMIN"
                   FontSize="48"
                   FontWeight="Bold"
                   Margin="0,40,0,0"/>

        <!-- Buchung & Fotos rechts oben -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,40,0,0">
            <StackPanel Margin="0,0,32,0">
                <TextBlock Text="Buchung:" FontWeight="Bold"/>
                <TextBlock x:Name="TbBookingNumber" Text="13515"/>
            </StackPanel>
            <StackPanel Margin="0,0,32,0">
                <TextBlock Text="Fotos:" FontWeight="Bold"/>
                <TextBlock x:Name="TbPhotoCount" Text="121"/>
            </StackPanel>
            <Grid>
                <Ellipse Width="48"
                         Height="48"
                         Fill="#4CAF50"/>
                <TextBlock Text="✔"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           Margin="0,4,8,0"/>
            </Grid>
        </StackPanel>

        <!-- 2) EINSTELLUNGEN UND GERÄTE-INFOS -->
        <Grid Margin="0,120,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <!-- Links: Checkboxen -->
            <StackPanel Grid.Column="0"
                        Orientation="Vertical"
                        VerticalAlignment="Top">
                <CheckBox Content="Direktdruck" IsChecked="True" FontSize="18" Margin="0,0,0,12"/>
                <CheckBox Content="Galerie" FontSize="18" Margin="0,0,0,12"/>
                <CheckBox Content="Foto-Filter" FontSize="18" Margin="0,0,0,12"/>
                <CheckBox Content="Verzögerung" IsChecked="True" FontSize="18"/>
            </StackPanel>
            <!-- Rechts: Kamera, Drucker, USB -->
            <StackPanel Grid.Column="1"
                        Orientation="Vertical"
                        VerticalAlignment="Top">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="🔄" FontSize="20"/>
                    <TextBlock Text="Canon EOS 1000D" FontSize="18" Margin="8,0,0,0"/>
                    <Button Content="⚙" Width="24" Height="24" Padding="0" Margin="8,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="🖨️" FontSize="20"/>
                    <TextBlock Text="Canon CP1000" FontSize="18" Margin="8,0,0,0"/>
                    <Button Content="⚙" Width="24" Height="24" Padding="0" Margin="8,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💾" FontSize="20"/>
                    <TextBlock Text="USB Laufwerk: D:\" FontSize="18" Margin="8,0,0,0"/>
                    <Button Content="⚙" Width="24" Height="24" Padding="0" Margin="8,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- 3) EVENT-BUTTONS -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,260,0,0">
            <Button Click="NewEvent_Click"
                    Padding="12,6"
                    FontSize="16"
                    Margin="0,0,16,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📂" FontSize="20"/>
                    <TextBlock Text="Neues Event anlegen" Margin="6,0,0,0"/>
                </StackPanel>
            </Button>
            <Button Click="OpenArchive_Click"
                    Padding="12,6"
                    FontSize="16">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🗄️" FontSize="20"/>
                    <TextBlock Text="Archiv öffnen" Margin="6,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- 4) FOTO DESIGN -->
        <StackPanel Margin="0,340,0,0">
            <TextBlock Text="Foto Design" FontSize="20" FontWeight="Bold"/>
            <CheckBox Content="2 Designs" FontSize="16"/>

            <!-- Vorschau-Boxen -->
            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                <!-- existierendes Design -->
                <Grid Width="200" Height="120" Margin="0,0,24,0">
                    <Rectangle Stroke="Gray"
                               StrokeThickness="2"
                               StrokeDashArray="4,2"
                               RadiusX="4"
                               RadiusY="4"/>
                    <Image Source="pack://application:,,,/Resources/preview1.png"
                           Width="200" Height="120"/>
                    <Button Click="DeleteDesign_Click"
                            Content="🗑️"
                            Width="24" Height="24"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            BorderThickness="0"/>
                </Grid>
                <!-- Platz für neues Design -->
                <Grid Width="200" Height="120">
                    <Rectangle Stroke="Gray"
                               StrokeThickness="2"
                               StrokeDashArray="4,2"
                               RadiusX="4"
                               RadiusY="4"/>
                    <Button Click="AddDesign_Click"
                            Background="Transparent"
                            BorderThickness="0">
                        <TextBlock Text="＋"
                                   FontSize="32"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
