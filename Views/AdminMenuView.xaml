<UserControl x:Class="FotoboxApp.Views.AdminMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utilities="clr-namespace:FotoboxApp.Utilities"
             Background="White">
    <UserControl.Resources>
        <utilities:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <Style x:Key="AdminActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,8,8"/>
            <Setter Property="Width" Value="220"/>
        </Style>
    </UserControl.Resources>
    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Border Width="1280" Height="800" BorderBrush="Black" BorderThickness="2" Margin="12" CornerRadius="4">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.7*"/>
            </Grid.ColumnDefinitions>

            <!-- Titel & Zurück (optisch wie UserMenuView) -->
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Text="ADMIN"
                       FontWeight="Bold"
                       FontSize="44"
                       Foreground="Black"
                       VerticalAlignment="Top"
                       Margin="0,0,0,10"/>
            <Button Grid.Row="0" Grid.Column="1"
                    Content="X"
                    Width="66" Height="66"
                    FontSize="34" FontWeight="Bold"
                    Background="#D93030"
                    Foreground="White"
                    BorderBrush="#B02020"
                    BorderThickness="2"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="Back_Click"
                    Cursor="Hand"/>

            <!-- Hauptbereich zweispaltig -->
            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,18,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.15*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Linke Spalte: Einstellungen -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Row="0"
                                  VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Allgemein" FontWeight="Bold" FontSize="22" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                                <TextBlock Text="Aktueller Name" FontWeight="Bold" FontSize="20" Width="160"/>
                                <Border Background="#F0F0F0" Padding="10,6" CornerRadius="8">
                                    <TextBlock Text="{Binding CurrentGalleryDisplayName}" FontSize="18" FontWeight="Bold"/>
                                </Border>
                            </StackPanel>
                            <CheckBox Content="Direktdruck"
                                      FontSize="22"
                                      Margin="0,0,0,8"
                                      IsChecked="{Binding AllowDirektdruck, Mode=TwoWay}"/>
                            <CheckBox Content="Galerie"
                                      FontSize="22"
                                      Margin="0,0,0,8"
                                      IsChecked="{Binding AllowGalerie, Mode=TwoWay}"/>
                            <CheckBox Content="Foto-Filter"
                                      FontSize="22"
                                      Margin="0,0,0,8"
                                      IsChecked="{Binding AllowFotoFilter, Mode=TwoWay}"/>
                            <CheckBox Content="2 Designs"
                                      FontSize="22"
                                      Margin="0,0,0,8"
                                      IsChecked="{Binding AllowTwoTemplates, Mode=TwoWay}"/>
                            <Button Content="Verzögerungen"
                                    Style="{StaticResource AdminActionButtonStyle}"
                                    HorizontalAlignment="Left"
                                    Margin="0,0,0,12"
                                    Click="OpenDelaySettings_Click"/>
                            <Button Content="Standard-Design"
                                    Style="{StaticResource AdminActionButtonStyle}"
                                    Margin="0,0,0,8"
                                    HorizontalAlignment="Left"
                                    Click="OpenDefaultTemplate_Click"/>
                            <Button Content="Grafiken bearbeiten"
                                    Style="{StaticResource AdminActionButtonStyle}"
                                    Margin="0,0,0,8"
                                    HorizontalAlignment="Left"
                                    Click="OpenGraphicsManager_Click"/>
                            <Button Content="Designs / Templates"
                                    Style="{StaticResource AdminActionButtonStyle}"
                                    Margin="0,0,0,8"
                                    HorizontalAlignment="Left"
                                    Click="OpenDesignSettings_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Rechte Spalte: Geräteinformationen & Statistik -->
                <Grid Grid.Column="1" Margin="38,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                            <TextBlock Text="Kamera" FontWeight="Bold" FontSize="19" Width="120"/>
                            <StackPanel Width="220" Margin="8,0,0,0">
                                <TextBlock Text="{Binding AllowedCamerasSummary}"
                                           FontSize="19"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding CameraRotationSummary}"
                                           FontSize="14"
                                           Foreground="#666"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                            <Button Width="34"
                                    Height="34"
                                    ToolTip="Kamera 180° drehen"
                                    Margin="6,0,0,0"
                                    Background="#D93030"
                                    Foreground="White"
                                    BorderBrush="#B02020"
                                    BorderThickness="2"
                                    Click="ToggleCameraRotation_Click">
                                <TextBlock Text="180°" FontSize="14" FontWeight="Bold"/>
                            </Button>
                            <Button Width="28"
                                    Height="28"
                                    ToolTip="Kamera-Auswahl"
                                    Margin="6,0,0,0"
                                    Click="CameraSettingsAdmin_Click">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="16"/>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                            <TextBlock Text="Drucker" FontWeight="Bold" FontSize="19" Width="120"/>
                            <TextBlock Text="{Binding AllowedPrintersSummary}"
                                       FontSize="19"
                                       Margin="8,0,0,0"
                                       Width="220"
                                       TextWrapping="Wrap"/>
                            <Button Width="28"
                                    Height="28"
                                    ToolTip="Drucker-Auswahl"
                                    Margin="6,0,0,0"
                                    Click="PrinterSettingsAdmin_Click">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="16"/>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12" VerticalAlignment="Center">
                            <TextBlock Text="USB Speicher" FontWeight="Bold" FontSize="19" Width="120"/>
                            <TextBlock Text="{Binding UsbDriveSummary}"
                                       FontSize="19"
                                       Margin="8,0,0,0"
                                       Width="220"
                                       TextWrapping="Wrap"/>
                            <Button Width="28"
                                    Height="28"
                                    ToolTip="USB-Speicher auswählen"
                                    Margin="6,0,0,0"
                                    Click="UsbSettingsAdmin_Click">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE898;" FontSize="16"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,24,0,0">
                        <Button Content="Neues Event"
                                Style="{StaticResource AdminActionButtonStyle}"
                                Click="NewEvent_Click"/>
                        <Button Content="Archiv öffnen"
                                Style="{StaticResource AdminActionButtonStyle}"
                                Click="OpenArchive_Click"/>
                        <Button Content="Backup jetzt"
                                Style="{StaticResource AdminActionButtonStyle}"
                                Click="BackupNow_Click"/>
                        <Button Content="App beenden"
                                Style="{StaticResource AdminActionButtonStyle}"
                                Click="ShutdownApp_Click"/>
                        <Button Content="Fotobox ausschalten"
                                Style="{StaticResource AdminActionButtonStyle}"
                                Click="ShutdownSystem_Click"/>
                    </StackPanel>

                    <Border Grid.Row="3"
                            Margin="0,20,0,0"
                            Padding="16"
                            Background="#F7F7F7"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="12">
                        <StackPanel>
                            <TextBlock Text="Statistik"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Margin="0,0,0,12"/>
                            <TextBlock Text="{Binding CurrentGalleryDisplayName, StringFormat='Aktuelle Galerie: {0}'}"
                                       FontSize="15"
                                       Foreground="#555"
                                       Margin="0,0,0,12"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="Gesamt"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Margin="12,0,0,6"/>
                                <TextBlock Grid.Row="0" Grid.Column="2"
                                           Text="Event"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Margin="24,0,0,6"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Einzelfotos" FontSize="16"/>
                                <TextBlock Grid.Row="1" Grid.Column="1"
                                           Text="{Binding TotalSinglePhotos}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="12,0,0,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="2"
                                           Text="{Binding EventSinglePhotos}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="24,0,0,0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Collagen erstellt" FontSize="16" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1"
                                           Text="{Binding TotalCollagesCreated}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="12,8,0,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="2"
                                           Text="{Binding EventCollagesCreated}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="24,8,0,0"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Collagen gedruckt" FontSize="16" Margin="0,8,0,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1"
                                           Text="{Binding TotalCollagesPrinted}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="12,8,0,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="2"
                                           Text="{Binding EventCollagesPrinted}"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Margin="24,8,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- Overlay: Neues Event (Galerie-Name abfragen) -->
            <Grid x:Name="NewEventOverlay" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2"
                  Background="#88000000" Visibility="Collapsed">
                <Border Background="White" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="Neues Event anlegen" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="Galerie-Name:" FontWeight="Bold"/>
                        <TextBox x:Name="NewGalleryNameBox" Width="300" Height="34" FontSize="18" Margin="0,6,0,12"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Abbrechen" Width="140" Click="NewEventCancel_Click" Style="{StaticResource AdminActionButtonStyle}" Margin="0,0,12,0"/>
                            <Button Content="OK" Width="140" Click="NewEventConfirm_Click" Style="{StaticResource AdminActionButtonStyle}" Margin="0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Overlay: Backups anzeigen -->
            <Grid x:Name="BackupsOverlay" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2"
                  Background="#88000000" Visibility="Collapsed">
                <Border Background="White" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button Content="X" Width="50" Height="50" FontSize="20" FontWeight="Bold"
                                Background="#D93030" Foreground="White" BorderBrush="#B02020" BorderThickness="2"
                                HorizontalAlignment="Right" VerticalAlignment="Top"
                                Click="CloseBackups_Click"/>
                        <StackPanel Grid.Row="1" MinWidth="480" MinHeight="320" Margin="0,20,0,0">
                            <TextBlock Text="Backups" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                            <ListBox x:Name="BackupsList" MinHeight="220" Margin="0,0,0,10">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F5F5F5" Padding="10" Margin="0,0,0,6" CornerRadius="8">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding LastWriteTime, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" FontSize="12" Foreground="#666666"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,6">
                                <Button Content="Wiederherstellen" Width="180" Click="RestoreBackup_Click"
                                        Style="{StaticResource AdminActionButtonStyle}"
                                        IsEnabled="{Binding SelectedItem, ElementName=BackupsList, Converter={StaticResource NullToBoolConverter}}"/>
                                <Button Content="Backup kopieren" Width="180" Click="CopyBackup_Click"
                                        Style="{StaticResource AdminActionButtonStyle}"
                                        IsEnabled="{Binding SelectedItem, ElementName=BackupsList, Converter={StaticResource NullToBoolConverter}}"/>
                                <Button Content="Backup löschen" Width="180" Click="DeleteBackup_Click"
                                        Style="{StaticResource AdminActionButtonStyle}"
                                        IsEnabled="{Binding SelectedItem, ElementName=BackupsList, Converter={StaticResource NullToBoolConverter}}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="Ordner öffnen" Width="180" Click="OpenBackupFolder_Click" Style="{StaticResource AdminActionButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            
        </Grid>
    </Border>
    </Viewbox>
</UserControl>


