<!-- PIN keypad dialog layout used for unlocking admin features. -->
<Window x:Class="winbooth.Views.PinPadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" ResizeMode="NoResize"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        Title="Code eingeben" Background="#222" AllowsTransparency="True" Topmost="True">
    <StackPanel Margin="28" Background="#222" >
        <TextBlock Text="Bitte Code eingeben:" Foreground="White" FontSize="20" HorizontalAlignment="Center"/>
        <PasswordBox x:Name="PinBox" FontSize="28" Width="220" Height="40" Margin="0,14,0,20" 
                     HorizontalAlignment="Center" IsEnabled="False"
                     PasswordChar="●"/>
        <!-- Virtual keypad -->
        <UniformGrid Rows="4" Columns="3" HorizontalAlignment="Center">
            <Button Content="1" Click="Number_Click" Style="{StaticResource FB_ElegantButton}" />
            <Button Content="2" Click="Number_Click" Style="{StaticResource FB_ElegantButton}" />
            <Button Content="3" Click="Number_Click" Style="{StaticResource FB_ElegantButton}" />
            <Button Content="4" Click="Number_Click" Style="{StaticResource FB_ElegantButton}" />
            <Button Content="5" Click="Number_Click" Style="{StaticResource FB_ElegantButton}" />
            <Button Content="6" Click="Number_Click" Style="{StaticResource FB_ElegantButton}" />
            <Button Content="7" Click="Number_Click" Style="{StaticResource FB_ElegantButton}" />
            <Button Content="8" Click="Number_Click" Style="{StaticResource FB_ElegantButton}" />
            <Button Content="9" Click="Number_Click" Style="{StaticResource FB_ElegantButton}" />
            <Button Content="⌫" Click="Back_Click" Style="{StaticResource FB_ElegantButton}" />
            <Button Content="0" Click="Number_Click" Style="{StaticResource FB_ElegantButton}" />
            <Button Content="OK" Click="Ok_Click" Style="{StaticResource FB_ElegantButton}" />
        </UniformGrid>
        <TextBlock x:Name="ErrorText" Foreground="OrangeRed" FontSize="14" Margin="0,12,0,0" Text="" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
