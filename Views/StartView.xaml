<UserControl x:Class="FotoboxApp.Views.StartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:FotoboxApp.Converters"
    Background="White">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="FlatRoundButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="260"/>
            <Setter Property="Height" Value="260"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonChrome"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="130">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonChrome"
                                        Property="Opacity"
                                        Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonChrome"
                                        Property="Opacity"
                                        Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Viewbox Stretch="Uniform"
             StretchDirection="Both"
             VerticalAlignment="Top"
             HorizontalAlignment="Center">
        <Grid Width="1280" Height="950" Margin="36,0,36,0" Background="#F3F3F3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Linke Seite -->
        <Grid Grid.Column="0"
              Margin="0,50,48,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Height="400"
                    CornerRadius="0"
                    Background="{Binding StartInstructionBrush}"
                    Margin="0,0,0,12"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    VerticalAlignment="Top"
                    />

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,12">
                <Button x:Name="BtnStart"
                        Content="START"
                        Style="{StaticResource FlatRoundButtonStyle}"
                        Background="#D61C1C"
                        Foreground="White"
                        Click="BtnStart_Click"/>
                <Button x:Name="BtnGallery"
                        Content="GALERIE"
                        Style="{StaticResource FlatRoundButtonStyle}"
                        Background="#F3F3F3"
                        Foreground="#333333"
                        BorderBrush="#D0D0D0"
                        BorderThickness="2"
                        Margin="32,0,0,0"
                        Click="BtnGallery_Click"
                        Visibility="{Binding GalerieButton, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <Border Grid.Row="2"
                    Height="200"
                    CornerRadius="0"
                    Background="{Binding WarningInfoBrush}"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Margin="0,0,0,0"
                    VerticalAlignment="Bottom"
                    />
        </Grid>

        <!-- Rechte Seite -->
        <Grid Grid.Column="1"
              Margin="0,50,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Admin Button -->
            <Button x:Name="BtnAdmin"
                    Grid.Row="0"
                    Width="54"
                    Height="54"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,0,0,24"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="BtnAdmin_Click">
                <Border Width="44"
                        Height="44"
                        CornerRadius="12"
                        Background="#1A000000"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               Text="&#xE72E;"
                               FontSize="28"
                               Foreground="#444444"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Button>

            <!-- Template Auswahl -->
            <Grid Grid.Row="1"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom"
                  Margin="0,0,0,12"
                  Width="440">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Foto Design"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#111"
                           HorizontalAlignment="Right"
                           Margin="0,0,0,24"/>

                <StackPanel Grid.Row="1"
                            Orientation="Vertical"
                            HorizontalAlignment="Stretch">
                    <Button Height="240"
                            Margin="12,0,0,28"
                            Padding="0"
                            Background="Transparent"
                            Cursor="Hand"
                            Click="SelectTemplate1_Click">
                        <Button.BorderThickness>
                            <MultiBinding Converter="{StaticResource SelectedBorderMultiConverter}">
                                <Binding Path="ActiveTemplate"/>
                                <Binding Path="SelectedTemplate1"/>
                            </MultiBinding>
                        </Button.BorderThickness>
                        <Button.BorderBrush>
                            <MultiBinding Converter="{StaticResource SelectedBorderBrushMultiConverter}">
                                <Binding Path="ActiveTemplate"/>
                                <Binding Path="SelectedTemplate1"/>
                            </MultiBinding>
                        </Button.BorderBrush>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="16"
                                        Background="White"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <Grid>
                                        <Viewbox Stretch="Uniform">
                                            <Image Source="{Binding TemplateSlot1Preview}"
                                                   Width="420"
                                                   RenderOptions.BitmapScalingMode="HighQuality"
                                                   Visibility="{Binding SelectedTemplate1, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        </Viewbox>
                                        <TextBlock Text="Default"
                                                   FontSize="28"
                                                   FontWeight="Bold"
                                                   Foreground="#444"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedTemplate1}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Height="240"
                            Margin="12,0,0,0"
                            Padding="0"
                            Background="Transparent"
                            Cursor="Hand"
                            Visibility="{Binding AllowTwoTemplates, Converter={StaticResource BoolToVisibilityConverter}}"
                            Click="SelectTemplate2_Click">
                        <Button.BorderThickness>
                            <MultiBinding Converter="{StaticResource SelectedBorderMultiConverter}">
                                <Binding Path="ActiveTemplate"/>
                                <Binding Path="SelectedTemplate2"/>
                            </MultiBinding>
                        </Button.BorderThickness>
                        <Button.BorderBrush>
                            <MultiBinding Converter="{StaticResource SelectedBorderBrushMultiConverter}">
                                <Binding Path="ActiveTemplate"/>
                                <Binding Path="SelectedTemplate2"/>
                            </MultiBinding>
                        </Button.BorderBrush>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="16"
                                        Background="White"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <Grid>
                                        <Viewbox Stretch="Uniform">
                                            <Image Source="{Binding TemplateSlot2Preview}"
                                                   Width="420"
                                                   RenderOptions.BitmapScalingMode="HighQuality"
                                                   Visibility="{Binding SelectedTemplate2, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        </Viewbox>
                                        <TextBlock Text="Default"
                                                   FontSize="28"
                                                   FontWeight="Bold"
                                                   Foreground="#444"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding SelectedTemplate2}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- PIN Overlay -->
        <Grid x:Name="PinOverlay"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Background="#88000000"
              Visibility="Collapsed"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Margin="-36,0"
              Panel.ZIndex="1000">
            <Grid.Resources>
                <Style x:Key="PinKeyButton" TargetType="Button">
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="Height" Value="100"/>
                    <Setter Property="FontSize" Value="28"/>
                    <Setter Property="Margin" Value="8"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style x:Key="PinActionButton" TargetType="Button" BasedOn="{StaticResource PinKeyButton}">
                    <Setter Property="Width" Value="120"/>
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="FontSize" Value="22"/>
                </Style>
            </Grid.Resources>
            <Border Background="White"
                    CornerRadius="12"
                    Padding="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Bitte Code eingeben"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,12"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PinDisplay"
                               Text=""
                               FontSize="28"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                    <UniformGrid Rows="4" Columns="3" HorizontalAlignment="Center">
                        <Button Content="1" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="2" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="3" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="4" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="5" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="6" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="7" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="8" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="9" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="DEL" Click="PinBack_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="0" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="OK" Click="PinOk_Click" Style="{StaticResource PinKeyButton}"/>
                    </UniformGrid>
                    <Button Content="Abbrechen" Click="PinCancel_Click" Margin="0,16,0,0" Style="{StaticResource PinActionButton}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
    </Viewbox>
</UserControl>
