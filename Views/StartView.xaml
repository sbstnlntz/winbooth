<UserControl x:Class="FotoboxApp.Views.StartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:FotoboxApp.Converters"
    Background="White"
    MinWidth="1100" MinHeight="700">

	<UserControl.Resources>
		<conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
	</UserControl.Resources>

	<Grid Margin="36,0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*"/>
			<ColumnDefinition Width="1*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Linke Seite -->
		<StackPanel Grid.Column="0" VerticalAlignment="Stretch" Margin="0,36,36,36">
			<!-- Titel -->
			<Border Background="#C00" CornerRadius="3" Padding="14,0" Margin="0,0,0,32">
				<TextBlock Text="SO FUNKTIONIERT DIE FOTOBOX"
                           Foreground="White"
                           FontSize="38"
                           FontWeight="Bold"/>
			</Border>

			<!-- Steps -->
			<StackPanel Margin="0,0,0,20">
				<TextBlock FontSize="29" Foreground="Black" Margin="0,0,0,7">
					<Run Text="1. Countdown starten"/>
				</TextBlock>
				<TextBlock FontSize="29" Foreground="Black" Margin="0,0,0,7">
					<Run Text="2. "/>
					<Underline>
						<Run Text="oben"/>
					</Underline>
					<Run Text=" in die Kamera schauen"/>
				</TextBlock>
				<TextBlock FontSize="29" Foreground="Black" Margin="0,0,0,7">
					<Run Text="3. warten, bis das Foto gemacht wurde"/>
				</TextBlock>
				<TextBlock FontSize="29" Foreground="Black" Margin="0,0,0,0">
					<Run Text="4. Bild ggf. direkt ausdrucken"/>
				</TextBlock>
			</StackPanel>

			<!-- Galerie-Name-Auswahl -->
			<StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
				<Button Content="Galerie-Name"
                        Click="SetGalleryName_Click"
                        Margin="0,0,18,0"
                        FontSize="19"
                        Padding="18,7"/>
				<TextBlock Text="{Binding GalleryName, FallbackValue='Kein Name'}"
                           Foreground="#B40000"
                           FontSize="19"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
			</StackPanel>

			<!-- Start & Galerie Buttons (groß, rund, nebeneinander) -->
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,16">
				<Button x:Name="BtnStart"
						Content="START"
						Width="140" Height="140"
						FontSize="27"
						FontWeight="Bold"
						Margin="0,0,24,0"
						Background="#B40000"
						Foreground="White"
						BorderBrush="#900"
						BorderThickness="2"
						Click="BtnStart_Click">
					<Button.Template>
						<ControlTemplate TargetType="Button">
							<Grid>
								<Ellipse Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="2"/>
								<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</Grid>
						</ControlTemplate>
					</Button.Template>
				</Button>
				<Button x:Name="BtnGallery"
						Content="GALERIE"
						Width="140" Height="140"
						FontSize="27"
						FontWeight="Bold"
						Background="#CCC"
						Foreground="White"
						BorderBrush="#888"
						BorderThickness="2"
						Click="BtnGallery_Click"
						Visibility="{Binding GalerieButton, Converter={StaticResource BoolToVisibilityConverter}}">
					<Button.Template>
						<ControlTemplate TargetType="Button">
							<Grid>
								<Ellipse Fill="{TemplateBinding Background}" Stroke="{TemplateBinding BorderBrush}" StrokeThickness="2"/>
								<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</Grid>
						</ControlTemplate>
					</Button.Template>
				</Button>
			</StackPanel>


			<!-- Hinweistext -->
			<TextBlock
				FontSize="17"
				Foreground="#222"
				Margin="0,0,0,0"
				TextWrapping="Wrap"
				Width="420"
				TextAlignment="Left"
				HorizontalAlignment="Left">
				<Run FontWeight="Bold" Text="Wichtige Hinweise: "/>
				<Run Text="Die Fotobox benötigt immer genügend Licht. "/>
				<Run Text="Bitte beachte auch, dass die Bilder immer mit einer leichten Verzögerung gemacht werden. "/>
				<Run Text="Idealerweise stehen mehrere Personen ruhig nebeneinander und schauen oben in die Kamera."/>
			</TextBlock>

		</StackPanel>

		<!-- Rechts: Admin-Button oben, Templates unten -->
		<Grid Grid.Column="1">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Admin-Icon oben rechts, transparent/grau -->
			<Button x:Name="BtnAdmin"
				Grid.Row="0"
				Content="Menü"
				Width="80"
				Height="40"
				FontSize="20"
				HorizontalAlignment="Right"
				Margin="0,8,0,0"
				VerticalAlignment="Top"
				Click="BtnAdmin_Click"
				Background="#F0F0F0"
				BorderBrush="#CCCCCC"
				BorderThickness="1"
				Foreground="#222"
				Opacity="1"/>



			<!-- Template Buttons (übereinander, rechts unten) -->
			<StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,12,22">
				<TextBlock Text="FOTO-DESIGN" FontSize="23" FontWeight="Bold" Margin="0,0,0,18" Foreground="#444" HorizontalAlignment="Right"/>
				<!-- Button 1 -->
				<Button Width="180" Height="120" Margin="0,0,0,14"
                        Style="{StaticResource TemplateSelectButtonStyle}"
                        Click="SelectTemplate1_Click">
					<Button.BorderThickness>
						<MultiBinding Converter="{StaticResource SelectedBorderMultiConverter}">
							<Binding Path="ActiveTemplate"/>
							<Binding Path="SelectedTemplate1"/>
						</MultiBinding>
					</Button.BorderThickness>
					<Button.BorderBrush>
						<MultiBinding Converter="{StaticResource SelectedBorderBrushMultiConverter}">
							<Binding Path="ActiveTemplate"/>
							<Binding Path="SelectedTemplate1"/>
						</MultiBinding>
					</Button.BorderBrush>
					<StackPanel>
						<Image Source="{Binding SelectedTemplate1.PreviewImage}" Width="150" Height="90"/>
						<TextBlock Text="{Binding SelectedTemplate1.Name}" FontSize="16" Foreground="#222" HorizontalAlignment="Center"/>
					</StackPanel>
				</Button>
				<!-- Button 2 -->
				<Button Width="180" Height="120"
                        Style="{StaticResource TemplateSelectButtonStyle}"
                        Click="SelectTemplate2_Click">
					<Button.BorderThickness>
						<MultiBinding Converter="{StaticResource SelectedBorderMultiConverter}">
							<Binding Path="ActiveTemplate"/>
							<Binding Path="SelectedTemplate2"/>
						</MultiBinding>
					</Button.BorderThickness>
					<Button.BorderBrush>
						<MultiBinding Converter="{StaticResource SelectedBorderBrushMultiConverter}">
							<Binding Path="ActiveTemplate"/>
							<Binding Path="SelectedTemplate2"/>
						</MultiBinding>
					</Button.BorderBrush>
					<StackPanel>
						<Image Source="{Binding SelectedTemplate2.PreviewImage}" Width="150" Height="90"/>
						<TextBlock Text="{Binding SelectedTemplate2.Name}" FontSize="16" Foreground="#222" HorizontalAlignment="Center"/>
					</StackPanel>
				</Button>
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>
