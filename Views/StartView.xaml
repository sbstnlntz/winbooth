<UserControl x:Class="FotoboxApp.Views.StartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:FotoboxApp.Converters"
    Background="White"
    MinWidth="1100" MinHeight="700">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <DropShadowEffect x:Key="BannerShadow"
                          Color="#33000000"
                          BlurRadius="22"
                          ShadowDepth="6"
                          Direction="270"/>

        <DropShadowEffect x:Key="ButtonShadowPrimary"
                          Color="#66000000"
                          BlurRadius="24"
                          ShadowDepth="9"
                          Direction="270"/>

        <DropShadowEffect x:Key="ButtonShadowSecondary"
                          Color="#44000000"
                          BlurRadius="20"
                          ShadowDepth="7"
                          Direction="270"/>
    </UserControl.Resources>

    <Grid Margin="36,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Linke Seite -->
        <Grid Grid.Column="0"
              Margin="0,36,48,36">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titel -->
            <Border Grid.Row="0"
                    Background="#C8102E"
                    CornerRadius="6"
                    Padding="20,12"
                    Effect="{StaticResource BannerShadow}"
                    Margin="0,0,0,36">
                <TextBlock Text="SO FUNKTIONIERT DIE FOTOBOX"
                           Foreground="White"
                           FontSize="38"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Steps -->
            <StackPanel Grid.Row="1"
                        Margin="0,0,0,32">
                <TextBlock FontSize="30" Foreground="#111" Margin="0,0,0,10" FontWeight="SemiBold">
                    <Run Text="1. Countdown starten"/>
                </TextBlock>
                <TextBlock FontSize="30" Foreground="#111" Margin="0,0,0,10" FontWeight="SemiBold">
                    <Run Text="2. "/>
                    <Underline>
                        <Run Text="oben"/>
                    </Underline>
                    <Run Text=" in die Kamera schauen"/>
                </TextBlock>
                <TextBlock FontSize="30" Foreground="#111" Margin="0,0,0,10" FontWeight="SemiBold">
                    <Run Text="3. warten, bis das Foto gemacht wurde"/>
                </TextBlock>
                <TextBlock FontSize="30" Foreground="#111" Margin="0,0,0,0" FontWeight="SemiBold">
                    <Run Text="4. Bild ggf. direkt ausdrucken"/>
                </TextBlock>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,28">
                <Button x:Name="BtnStart"
                        Content="START"
                        Width="160"
                        Height="160"
                        FontSize="30"
                        FontWeight="Bold"
                        Foreground="White"
                        Cursor="Hand"
                        Click="BtnStart_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Fill="#D61C1C"
                                         Stroke="#7A0E0E"
                                         StrokeThickness="3"
                                         Effect="{StaticResource ButtonShadowPrimary}"/>
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="BtnGallery"
                        Content="GALERIE"
                        Width="160"
                        Height="160"
                        FontSize="30"
                        FontWeight="Bold"
                        Foreground="#333333"
                        Margin="32,0,0,0"
                        Cursor="Hand"
                        Click="BtnGallery_Click"
                        Visibility="{Binding GalerieButton, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Fill="#D0D0D0"
                                         Stroke="#939393"
                                         StrokeThickness="3"
                                         Effect="{StaticResource ButtonShadowSecondary}"/>
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Hinweis -->
            <Border Grid.Row="3"
                    Background="#F7F7F7"
                    CornerRadius="6"
                    Padding="18"
                    HorizontalAlignment="Stretch">
                <TextBlock FontSize="18"
                           Foreground="#222"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Left">
                    <Run FontWeight="Bold" Text="Wichtige Hinweise: "/>
                    <Run Text="Die Fotobox benoetigt immer genuegend Licht. Bitte beachte auch, dass die Bilder immer mit einer leichten Verzoegerung gemacht werden. "/>
                    <Run Text="Idealerweise stehen mehrere Personen ruhig nebeneinander und schauen oben in die Kamera."/>
                </TextBlock>
            </Border>
        </Grid>

        <!-- Rechte Seite -->
        <Grid Grid.Column="1"
              Margin="0,36,0,36">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Admin Button -->
            <Button x:Name="BtnAdmin"
                    Grid.Row="0"
                    Width="54"
                    Height="54"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,0,0,24"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    Click="BtnAdmin_Click">
                <Border Width="44"
                        Height="44"
                        CornerRadius="12"
                        Background="#1A000000"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               Text="&#xE72E;"
                               FontSize="28"
                               Foreground="#444444"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Button>

            <!-- Template Auswahl -->
            <Grid Grid.Row="1"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Bottom"
                  Margin="0,0,0,12"
                  Width="440">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Foto Design"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#111"
                           HorizontalAlignment="Right"
                           Margin="0,0,0,24"/>

                <StackPanel Grid.Row="1"
                            Orientation="Vertical"
                            HorizontalAlignment="Stretch">
                    <Button Height="240"
                            Margin="0,0,0,28"
                            Padding="0"
                            Background="Transparent"
                            Cursor="Hand"
                            Visibility="{Binding SelectedTemplate1, Converter={StaticResource NullToVisibilityConverter}}"
                            Click="SelectTemplate1_Click">
                        <Button.BorderThickness>
                            <MultiBinding Converter="{StaticResource SelectedBorderMultiConverter}">
                                <Binding Path="ActiveTemplate"/>
                                <Binding Path="SelectedTemplate1"/>
                            </MultiBinding>
                        </Button.BorderThickness>
                        <Button.BorderBrush>
                            <MultiBinding Converter="{StaticResource SelectedBorderBrushMultiConverter}">
                                <Binding Path="ActiveTemplate"/>
                                <Binding Path="SelectedTemplate1"/>
                            </MultiBinding>
                        </Button.BorderBrush>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="16"
                                        Background="White"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        ClipToBounds="True">
                                    <Viewbox Stretch="Uniform">
                                        <Image Source="{Binding SelectedTemplate1.PreviewImage}"
                                               Width="420"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Viewbox>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Height="240"
                            Padding="0"
                            Background="Transparent"
                            Cursor="Hand"
                            Visibility="{Binding SelectedTemplate2, Converter={StaticResource NullToVisibilityConverter}}"
                            Click="SelectTemplate2_Click">
                        <Button.BorderThickness>
                            <MultiBinding Converter="{StaticResource SelectedBorderMultiConverter}">
                                <Binding Path="ActiveTemplate"/>
                                <Binding Path="SelectedTemplate2"/>
                            </MultiBinding>
                        </Button.BorderThickness>
                        <Button.BorderBrush>
                            <MultiBinding Converter="{StaticResource SelectedBorderBrushMultiConverter}">
                                <Binding Path="ActiveTemplate"/>
                                <Binding Path="SelectedTemplate2"/>
                            </MultiBinding>
                        </Button.BorderBrush>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="16"
                                        Background="White"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        ClipToBounds="True">
                                    <Viewbox Stretch="Uniform">
                                        <Image Source="{Binding SelectedTemplate2.PreviewImage}"
                                               Width="420"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                    </Viewbox>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- PIN Overlay -->
        <Grid x:Name="PinOverlay"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Background="#88000000"
              Visibility="Collapsed"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Margin="-36,0"
              Panel.ZIndex="1000">
            <Grid.Resources>
                <Style x:Key="PinKeyButton" TargetType="Button">
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="Height" Value="100"/>
                    <Setter Property="FontSize" Value="28"/>
                    <Setter Property="Margin" Value="8"/>
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
                <Style x:Key="PinActionButton" TargetType="Button" BasedOn="{StaticResource PinKeyButton}">
                    <Setter Property="Width" Value="120"/>
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="FontSize" Value="22"/>
                </Style>
            </Grid.Resources>
            <Border Background="White"
                    CornerRadius="12"
                    Padding="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Bitte Code eingeben"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,12"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="PinDisplay"
                               Text=""
                               FontSize="28"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                    <UniformGrid Rows="4" Columns="3" HorizontalAlignment="Center">
                        <Button Content="1" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="2" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="3" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="4" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="5" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="6" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="7" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="8" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="9" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="DEL" Click="PinBack_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="0" Click="PinNumber_Click" Style="{StaticResource PinKeyButton}"/>
                        <Button Content="OK" Click="PinOk_Click" Style="{StaticResource PinKeyButton}"/>
                    </UniformGrid>
                    <Button Content="Abbrechen" Click="PinCancel_Click" Margin="0,16,0,0" Style="{StaticResource PinActionButton}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
