<!-- UI for adjusting capture delay values and countdown durations. -->
<Window x:Class="winbooth.Views.DelaySettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verzögerungen"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="White"
        MinWidth="420"
        WindowStyle="None">
    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinWidth" Value="140"/>
        </Style>
        <SolidColorBrush x:Key="DelaySliderAccentBrush" Color="#FF2196F3"/>
        <SolidColorBrush x:Key="DelaySliderAccentDarkBrush" Color="#FF0B66CC"/>
        <SolidColorBrush x:Key="DelaySliderTrackBrush" Color="#FFE4F1FD"/>
        <Style x:Key="DelayTouchSliderThumbStyle" TargetType="Thumb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Width="34"
                                Height="34"
                                CornerRadius="17"
                                Background="{StaticResource DelaySliderAccentBrush}"
                                BorderBrush="{StaticResource DelaySliderAccentDarkBrush}"
                                BorderThickness="2"
                                SnapsToDevicePixels="True"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DelayTouchSliderRepeatButtonStyle" TargetType="RepeatButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="{TemplateBinding Background}"
                                Height="10"
                                VerticalAlignment="Center"
                                CornerRadius="5"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Focusable" Value="False"/>
        </Style>
        <Style x:Key="DelayTouchSliderStyle" TargetType="Slider">
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="0,6,0,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Height="80"
                              Margin="0,6,0,16"
                              ClipToBounds="False">
                            <Track x:Name="PART_Track"
                                   VerticalAlignment="Center"
                                   Height="34"
                                   Maximum="{TemplateBinding Maximum}"
                                   Minimum="{TemplateBinding Minimum}"
                                   Value="{TemplateBinding Value}"
                                   IsDirectionReversed="{TemplateBinding IsDirectionReversed}"
                                   Orientation="{TemplateBinding Orientation}">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge"
                                                  Style="{StaticResource DelayTouchSliderRepeatButtonStyle}"
                                                  Background="{StaticResource DelaySliderAccentBrush}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource DelayTouchSliderThumbStyle}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge"
                                                  Style="{StaticResource DelayTouchSliderRepeatButtonStyle}"
                                                  Background="{StaticResource DelaySliderTrackBrush}"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Verzögerungen"
                       FontSize="26"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
            <Button Grid.Column="1"
                    Style="{StaticResource FB_DialogCloseButtonStyle}"
                    Click="Close_Click"/>
        </Grid>

        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <TextBlock Text="Start-Vorbereitungszeit"
                       FontWeight="Bold"
                       FontSize="20"/>
            <TextBlock Text="Zeitspanne zwischen Start-Klick und Fotoaufnahme."
                       Foreground="#666"
                       FontSize="14"
                       Margin="0,4,0,8"
                       TextWrapping="Wrap"/>
            <Grid Margin="0,4,0,0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Slider Grid.Column="0"
                        Minimum="1"
                        Maximum="10"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        Style="{StaticResource DelayTouchSliderStyle}"
                        Value="{Binding StartReadyDelaySeconds, Mode=TwoWay}"
                        HorizontalAlignment="Stretch"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding StartReadyDelaySeconds, StringFormat={}{0} Sek.}"
                           FontSize="18"
                           Margin="14,0,0,0"
                           VerticalAlignment="Center"/>
            </Grid>
            <TextBlock Text="Collage-Erstellzeit"
                       FontWeight="Bold"
                       FontSize="20"/>
            <TextBlock Text="Die Collage wird erstellt."
                       Foreground="#666"
                       FontSize="14"
                       Margin="0,4,0,8"
                       TextWrapping="Wrap"/>
            <Grid Margin="0,4,0,0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Slider Grid.Column="0"
                        Minimum="1"
                        Maximum="10"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        Style="{StaticResource DelayTouchSliderStyle}"
                        Value="{Binding CollageCreationDelaySeconds, Mode=TwoWay}"
                        HorizontalAlignment="Stretch"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding CollageCreationDelaySeconds, StringFormat={}{0} Sek.}"
                           FontSize="18"
                           Margin="14,0,0,0"
                           VerticalAlignment="Center"/>
            </Grid>
            <TextBlock Text="Verzögerung nach Collage"
                       FontWeight="Bold"
                       FontSize="20"/>
            <TextBlock Text="Zeitraum, in dem 'Bild wird gespeichert...' bzw. 'Bild wird gedruckt...' angezeigt wird."
                       Foreground="#666"
                       FontSize="14"
                       Margin="0,4,0,8"
                       TextWrapping="Wrap"/>
            <Grid Margin="0,4,0,0" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Slider Grid.Column="0"
                        Minimum="1"
                        Maximum="10"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        Style="{StaticResource DelayTouchSliderStyle}"
                        Value="{Binding PostProcessDelaySeconds, Mode=TwoWay}"
                        HorizontalAlignment="Stretch"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding PostProcessDelaySeconds, StringFormat={}{0} Sek.}"
                           FontSize="18"
                           Margin="14,0,0,0"
                           VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>

    </Grid>
</Window>


