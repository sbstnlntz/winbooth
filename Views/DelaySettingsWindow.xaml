<Window x:Class="FotoboxApp.Views.DelaySettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verzögerungen"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="White"
        MinWidth="420">
    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinWidth" Value="140"/>
        </Style>
    </Window.Resources>
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Start-Vorbereitungszeit"
                       FontWeight="Bold"
                       FontSize="20"/>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                <Slider Minimum="1"
                        Maximum="10"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        Value="{Binding StartReadyDelaySeconds, Mode=TwoWay}"
                        Width="220"/>
                <TextBlock Text="{Binding StartReadyDelaySeconds, StringFormat={}{0} Sek.}"
                           FontSize="18"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="Zeitspanne zwischen Start-Klick und Fotoaufnahme."
                       Foreground="#666"
                       FontSize="14"
                       Margin="0,4,0,12"
                       TextWrapping="Wrap"/>

            <TextBlock Text="Collage-Erstellzeit"
                       FontWeight="Bold"
                       FontSize="20"/>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                <Slider Minimum="1"
                        Maximum="10"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        Value="{Binding CollageCreationDelaySeconds, Mode=TwoWay}"
                        Width="220"/>
                <TextBlock Text="{Binding CollageCreationDelaySeconds, StringFormat={}{0} Sek.}"
                           FontSize="18"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="Die Collage wird erstellt."
                       Foreground="#666"
                       FontSize="14"
                       Margin="0,4,0,12"
                       TextWrapping="Wrap"/>

            <TextBlock Text="Verzögerung nach Collage"
                       FontWeight="Bold"
                       FontSize="20"/>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                <Slider Minimum="1"
                        Maximum="10"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        Value="{Binding PostProcessDelaySeconds, Mode=TwoWay}"
                        Width="220"/>
                <TextBlock Text="{Binding PostProcessDelaySeconds, StringFormat={}{0} Sek.}"
                           FontSize="18"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="Zeitraum, in dem 'Bild wird gespeichert...' bzw. 'Bild wird gedruckt...' angezeigt wird."
                       Foreground="#666"
                       FontSize="14"
                       Margin="0,4,0,0"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,24,0,0">
            <Button Content="Schließen"
                    Style="{StaticResource DialogButtonStyle}"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>


