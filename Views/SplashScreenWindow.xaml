<Window x:Class="FotoboxApp.Views.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowState="Maximized"
        Background="{DynamicResource FB_WhiteBrush}"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        SizeToContent="Manual"
        WindowStartupLocation="CenterScreen"
        Title="Fotobox startet">
    <Grid Background="{DynamicResource FB_WhiteBrush}">
        <Border Background="{DynamicResource FB_OverlayBrush}"
                Opacity="0.12"/>
        <Grid Margin="80"
              Panel.ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           FontFamily="{DynamicResource FB_FontFamilyAccent}"
                           FontWeight="Bold"
                           FontSize="36"
                           Foreground="{DynamicResource FB_TextBrush}"
                           Margin="0,0,0,32"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>

                <Border Grid.Row="1"
                        Background="{DynamicResource FB_WhiteBrush}"
                        CornerRadius="36"
                        Padding="32"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        SnapsToDevicePixels="True"
                        Margin="0,0,0,40">
                    <Viewbox Stretch="Uniform"
                             StretchDirection="Both">
                        <Image Source="/Assets/splashscreen.png"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Viewbox>
                </Border>

                <Grid Grid.Row="2"
                      HorizontalAlignment="Center"
                      Width="520"
                      Margin="0,0,0,16">
                    <Border Background="#1A000000"
                            CornerRadius="12"
                            Padding="6"
                            SnapsToDevicePixels="True">
                        <ProgressBar x:Name="LoadingProgressBar"
                                     Minimum="0"
                                     Maximum="100"
                                     Height="22"
                                     Foreground="{DynamicResource FB_AccentBrush}"
                                     Background="#33000000"
                                     BorderThickness="0"
                                     Value="0"/>
                    </Border>
                    <TextBlock x:Name="ProgressLabel"
                               Text="{Binding ElementName=LoadingProgressBar, Path=Value, StringFormat={}{0:0} %}"
                               FontFamily="{DynamicResource FB_FontFamily}"
                               FontSize="{DynamicResource FB_FontSizeSmall}"
                               Foreground="{DynamicResource FB_WhiteBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"/>
                </Grid>

                <TextBlock Grid.Row="3"
                           x:Name="StatusTextBlock"
                           Text="Initialisiere Komponenten..."
                           FontFamily="{DynamicResource FB_FontFamily}"
                           FontSize="{DynamicResource FB_FontSizeNormal}"
                           Foreground="{DynamicResource FB_TextBrush}"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Grid>

            <Grid Grid.Row="1"
                  Margin="0,32,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="FooterCopyrightText"
                           FontFamily="{DynamicResource FB_FontFamily}"
                           FontSize="12"
                           Foreground="{DynamicResource FB_TextBrush}"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Opacity="0.6"/>

                <TextBlock x:Name="FooterVersionText"
                           Grid.Column="1"
                           FontFamily="{DynamicResource FB_FontFamily}"
                           FontSize="12"
                           Foreground="{DynamicResource FB_TextBrush}"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Opacity="0.6"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
