<Window x:Class="FotoboxApp.Views.PrinterSelectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drucker auswahlen"
        Height="320" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <StackPanel Margin="18">
        <TextBlock Text="Bitte wahlen Sie einen Drucker aus:" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
        <ListBox x:Name="ListBoxPrinters" MinHeight="180" FontSize="16"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Content="OK" Width="80" Margin="0,0,8,0" Click="Ok_Click"/>
            <Button Content="Abbrechen" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
