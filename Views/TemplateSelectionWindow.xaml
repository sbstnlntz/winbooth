<Window x:Class="FotoboxApp.Views.TemplateSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vorlage auswählen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="{StaticResource FB_OverlayBrush}"
        WindowState="Maximized"
        Topmost="True"
        ShowInTaskbar="False">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Zentrales Panel -->
        <Border Grid.Row="1" Grid.Column="1"
            Background="{StaticResource FB_BackgroundBrush}"
            CornerRadius="16"
            Padding="28"
            BorderBrush="{StaticResource FB_AccentBrush}"
            BorderThickness="2">
            <ScrollViewer Padding="10"
                    VerticalScrollBarVisibility="Hidden"
                    HorizontalScrollBarVisibility="Disabled"
                    PanningMode="VerticalOnly"
                    Background="Transparent">
                <ItemsControl ItemsSource="{Binding}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="240" Height="240"
                                    Margin="15"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="Template_Click"
                                    Tag="{Binding}">
                                <Border Background="#232323"
                                        CornerRadius="12"
                                        Padding="8"
                                        BorderBrush="{StaticResource FB_AccentBrush}"
                                        BorderThickness="2">
                                    <Image Source="{Binding PreviewImage}"
                                           Stretch="Uniform"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Schließen-Knopf oben rechts -->
        <Button Grid.Row="0" Grid.Column="2"
                Style="{StaticResource FB_DialogCloseButtonStyle}"
                Margin="24"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="Close_Click"/>
    </Grid>
</Window>
