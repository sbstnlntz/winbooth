<UserControl x:Class="winbooth.Views.AdminGraphicsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <UserControl.Resources>
        <Style x:Key="AdminActionButtonStyle" TargetType="Button" BasedOn="{StaticResource FB_ElegantButton}">
            <Setter Property="Height" Value="54"/>
            <Setter Property="Padding" Value="22,8"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
        </Style>
        <Style x:Key="ImagePreviewButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Background" Value="#F3F3F3"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#E8E8E8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#DCDCDC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Viewbox Stretch="Uniform" StretchDirection="Both">
        <Border Width="1280"
                Height="800"
                BorderBrush="Black"
                BorderThickness="2"
                Margin="12"
                CornerRadius="4">
            <Grid Margin="32">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Grafiken"
                           FontWeight="Bold"
                           FontSize="44"
                           Foreground="Black"
                           VerticalAlignment="Top"/>

                <Button Grid.Row="0"
                        Style="{StaticResource FB_DialogCloseButtonStyle}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="Back_Click"/>

                <Grid Grid.Row="1"
                      Margin="0,32,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="#F8F8F8"
                            CornerRadius="0"
                            Padding="24"
                            Margin="0,0,0,24"
                            >
                        <StackPanel>
                            <Border Background="#D61C1C"
                                    CornerRadius="8"
                                    Padding="12,6"
                                    Margin="0,0,0,12">
                                <TextBlock Text="Funktionen (1280 x 400)"
                                           FontWeight="Bold"
                                           FontSize="20"
                                           Foreground="White"/>
                            </Border>
                            <TextBlock Text="{Binding StartInstructionDescription}"
                                       FontSize="16"
                                       Foreground="#555"
                                       Margin="0,0,0,16"
                                       TextWrapping="Wrap"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Style="{StaticResource ImagePreviewButtonStyle}"
                                        Click="ChangeStartInstruction_Click"
                                        ToolTip="Grafik ändern">
                                    <Border Height="160"
                                            CornerRadius="0"
                                            Background="{Binding StartInstructionBrush}"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            SnapsToDevicePixels="True"
                                            />
                                </Button>
                                <Button Grid.Column="1"
                                        Style="{StaticResource IconButtonStyle}"
                                        Margin="18,0,0,0"
                                        Click="ResetStartInstruction_Click"
                                        IsEnabled="{Binding HasCustomStartInstruction}"
                                        ToolTip="Standardgrafik wiederherstellen">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               FontSize="28"
                                               Text="&#xE74D;"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="1"
                            Background="#F8F8F8"
                            CornerRadius="0"
                            Padding="24"
                            VerticalAlignment="Bottom"
                            >
                        <StackPanel>
                            <TextBlock Text="Hinweis (1280 x 200)"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Foreground="#222"
                                       Margin="0,0,0,12"/>
                            <TextBlock Text="{Binding WarningInfoDescription}"
                                       FontSize="16"
                                       Foreground="#555"
                                       Margin="0,0,0,16"
                                       TextWrapping="Wrap"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Style="{StaticResource ImagePreviewButtonStyle}"
                                        Click="ChangeWarningInfo_Click"
                                        ToolTip="Grafik ändern">
                                    <Border Height="160"
                                            CornerRadius="0"
                                            Background="{Binding WarningInfoBrush}"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            SnapsToDevicePixels="True"
                                            />
                                </Button>
                                <Button Grid.Column="1"
                                        Style="{StaticResource IconButtonStyle}"
                                        Margin="18,0,0,0"
                                        Click="ResetWarningInfo_Click"
                                        IsEnabled="{Binding HasCustomWarningInfo}"
                                        ToolTip="Standardgrafik wiederherstellen">
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               FontSize="28"
                                               Text="&#xE74D;"/>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>
