<!-- Central resource dictionary providing brushes, fonts, styles, and converters. -->
<Application x:Class="winbooth.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:utilities="clr-namespace:winbooth.Utilities">
	<Application.Resources>
		<ResourceDictionary>
			<!-- Core colors used for the comic inspired palette. -->
			<Color x:Key="FB_BackgroundColor">#FF2D2D36</Color>
			<!-- Vibrant comic style violet and blue accent. -->
			<Color x:Key="FB_AccentColor">#FFFFE100</Color>
			<!-- Comic inspired yellow accent. -->
			<Color x:Key="FB_AccentColorHover">#FF27C7FF</Color>
			<!-- Bright comic themed blue highlight. -->
			<Color x:Key="FB_AccentColorPressed">#FFEF307B</Color>
			<!-- Punchy comic pink accent. -->
			<Color x:Key="FB_WhiteColor">#FFFFFFFF</Color>
			<Color x:Key="FB_TextColor">#FF212529</Color>
			<!-- Near black tone that still fits the playful theme. -->
			<Color x:Key="FB_ButtonTextColor">#FF252525</Color>
			<!-- Bold tone that remains easy to read. -->
			<Color x:Key="FB_BorderColor">#FF5CF25B</Color>
			<!-- Bright comic green accent. -->
			<Color x:Key="FB_OverlayColor">#D0000000</Color>
			<Color x:Key="FB_ErrorColor">#FFFF006A</Color>
			<!-- Vivid red and pink alert color. -->

			<!-- Brush resources -->
			<SolidColorBrush x:Key="FB_BackgroundBrush" Color="{StaticResource FB_BackgroundColor}"/>
			<SolidColorBrush x:Key="FB_AccentBrush" Color="{StaticResource FB_AccentColor}"/>
			<SolidColorBrush x:Key="FB_AccentBrushHover" Color="{StaticResource FB_AccentColorHover}"/>
			<SolidColorBrush x:Key="FB_AccentBrushPressed" Color="{StaticResource FB_AccentColorPressed}"/>
			<SolidColorBrush x:Key="FB_WhiteBrush" Color="{StaticResource FB_WhiteColor}"/>
			<SolidColorBrush x:Key="FB_TextBrush" Color="{StaticResource FB_TextColor}"/>
			<SolidColorBrush x:Key="FB_ButtonTextBrush" Color="{StaticResource FB_ButtonTextColor}"/>
			<SolidColorBrush x:Key="FB_BorderBrush" Color="{StaticResource FB_BorderColor}"/>
			<SolidColorBrush x:Key="FB_OverlayBrush" Color="{StaticResource FB_OverlayColor}"/>
			<SolidColorBrush x:Key="FB_ErrorBrush" Color="{StaticResource FB_ErrorColor}"/>

			<!-- Shared fonts and font sizes -->
			<FontFamily x:Key="FB_FontFamily">Comic Sans MS</FontFamily>
			<FontFamily x:Key="FB_FontFamilyAccent">Arial Rounded MT Bold</FontFamily>
			<FontWeight x:Key="FB_FontWeightBold">Bold</FontWeight>
			<FontWeight x:Key="FB_FontWeightNormal">Normal</FontWeight>
			<sys:Double x:Key="FB_FontSizeBig">28</sys:Double>
			<sys:Double x:Key="FB_FontSizeNormal">18</sys:Double>
			<sys:Double x:Key="FB_FontSizeSmall">14</sys:Double>

			<!-- Primary button styles -->
			<Style TargetType="Button" x:Key="FB_ElegantButton">
				<Setter Property="FontFamily" Value="{StaticResource FB_FontFamily}"/>
				<Setter Property="FontWeight" Value="Bold"/>
				<Setter Property="FontSize" Value="{StaticResource FB_FontSizeNormal}"/>
				<Setter Property="Foreground" Value="{StaticResource FB_ButtonTextBrush}"/>
				<Setter Property="Background" Value="{StaticResource FB_AccentBrush}"/>
				<Setter Property="BorderBrush" Value="{StaticResource FB_BorderBrush}"/>
				<Setter Property="BorderThickness" Value="3"/>
				<Setter Property="Padding" Value="8,3"/>
				<Setter Property="Margin" Value="0,6,0,6"/>
				<Setter Property="Height" Value="48"/>
				<Setter Property="Cursor" Value="Hand"/>
				<Setter Property="SnapsToDevicePixels" Value="True"/>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="Button">
							<Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16"
                                SnapsToDevicePixels="True">
								<ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RecognizesAccessKey="True"/>
							</Border>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
				<Style.Triggers>
					<Trigger Property="IsMouseOver" Value="True">
						<Setter Property="Background" Value="{StaticResource FB_AccentBrushHover}"/>
					</Trigger>
					<Trigger Property="IsPressed" Value="True">
						<Setter Property="Background" Value="{StaticResource FB_AccentBrushPressed}"/>
					</Trigger>
				</Style.Triggers>
			</Style>

			<!-- Converters used by IsEnabled bindings -->
			<!-- Additional converters referenced by the views -->
			<utilities:NullToBoolConverter x:Key="NullToBoolConverter"/>
			<utilities:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
			<utilities:SelectedBorderMultiConverter x:Key="SelectedBorderMultiConverter"/>
			<utilities:SelectedBorderBrushMultiConverter x:Key="SelectedBorderBrushMultiConverter"/>
			

			<!-- Used only by the template selection buttons -->
			<Style x:Key="TemplateSelectButtonStyle" TargetType="Button">
				<Setter Property="Background" Value="Transparent"/>
				<Setter Property="BorderThickness" Value="1"/>
				<Setter Property="BorderBrush" Value="#888"/>
				<Setter Property="Padding" Value="0"/>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="Button">
							<Border
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="18"
                                SnapsToDevicePixels="True">
								<ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
							</Border>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>

			<Style x:Key="FB_DialogCloseButtonStyle" TargetType="Button">
				<Setter Property="Width" Value="60"/>
				<Setter Property="Height" Value="60"/>
				<Setter Property="FontSize" Value="26"/>
				<Setter Property="FontWeight" Value="Bold"/>
				<Setter Property="Content" Value="X"/>
				<Setter Property="Foreground" Value="White"/>
				<Setter Property="Background" Value="#D93030"/>
				<Setter Property="BorderBrush" Value="#B02020"/>
				<Setter Property="BorderThickness" Value="2"/>
				<Setter Property="Cursor" Value="Hand"/>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="Button">
							<Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="18"
                                    SnapsToDevicePixels="True">
								<ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsPressed" Value="True">
									<Setter TargetName="Border" Property="Background" Value="#C42424"/>
									<Setter TargetName="Border" Property="BorderBrush" Value="#951616"/>
								</Trigger>
								<Trigger Property="IsEnabled" Value="False">
									<Setter TargetName="Border" Property="Opacity" Value="0.4"/>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>

			<Style x:Key="FB_CheckBoxBaseStyle" TargetType="CheckBox">
				<Setter Property="FontSize" Value="{StaticResource FB_FontSizeNormal}"/>
				<Setter Property="Foreground" Value="{StaticResource FB_TextBrush}"/>
				<Setter Property="Margin" Value="0,6,0,6"/>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="CheckBox">
							<BulletDecorator Background="Transparent"
                                             VerticalAlignment="Center">
								<BulletDecorator.Bullet>
									<Border x:Name="Box"
                                            Width="28"
                                            Height="28"
                                            CornerRadius="6"
                                            BorderBrush="#555"
                                            BorderThickness="2"
                                            Background="White"
                                            Margin="0,0,12,0">
										<Path x:Name="CheckMark"
                                              Data="M6,14 L12,20 22,8"
                                              Stroke="White"
                                              StrokeThickness="3"
                                              StrokeEndLineCap="Round"
                                              StrokeStartLineCap="Round"
                                              Visibility="Collapsed"/>
									</Border>
								</BulletDecorator.Bullet>
								<ContentPresenter VerticalAlignment="Center"/>
							</BulletDecorator>
							<ControlTemplate.Triggers>
								<Trigger Property="IsChecked" Value="True">
									<Setter TargetName="Box" Property="Background" Value="#FF2196F3"/>
									<Setter TargetName="Box" Property="BorderBrush" Value="#FF0B66CC"/>
									<Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
								</Trigger>
								<Trigger Property="IsEnabled" Value="False">
									<Setter TargetName="Box" Property="Opacity" Value="0.4"/>
									<Setter Property="Foreground" Value="#77000000"/>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
			<Style TargetType="CheckBox" BasedOn="{StaticResource FB_CheckBoxBaseStyle}"/>

			<!-- Keep merged dictionaries at the end for predictable overrides -->
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="Themes/Styles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>
</Application>
