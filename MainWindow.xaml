<Window x:Class="FotoboxApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System.Windows;assembly=PresentationFramework"
        Title="Fotobox"
        WindowStyle="None"
        WindowState="Normal"
        ResizeMode="NoResize"
        MaxHeight="{x:Static sys:SystemParameters.MaximizedPrimaryScreenHeight}"
        MaxWidth="{x:Static sys:SystemParameters.MaximizedPrimaryScreenWidth}">

	<!-- 
         Wir definieren aus historischen Gründen zwei Spalten, 
         aber der Frame darin belegt BEIDE Spalten und füllt 
         so immer das ganze Fenster aus.
    -->
	<Grid Background="{DynamicResource FB_BackgroundBrush}">
        <Viewbox Stretch="Uniform" StretchDirection="Both">
            <Grid Width="1280" Height="800" Background="{DynamicResource FB_BackgroundBrush}">
                <!-- 
                     Der zentrale Frame, in den wir CameraView, CollageView etc. 
                     rein navigieren. Er füllt den gesamten designierten Bereich.
                -->
                <Frame x:Name="MainFrame"
                       NavigationUIVisibility="Hidden"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"/>
            </Grid>
        </Viewbox>
	</Grid>
</Window>
