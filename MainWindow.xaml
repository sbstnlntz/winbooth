<Window x:Class="FotoboxApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fotobox"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize">

	<!-- 
         Wir definieren aus historischen Gründen zwei Spalten, 
         aber der Frame darin belegt BEIDE Spalten und füllt 
         so immer das ganze Fenster aus.
    -->
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- 
             Der zentrale Frame, in den wir CameraView, CollageView etc. 
             rein navigieren. Er spannt sich über beide Spalten.
        -->
		<Frame x:Name="MainFrame"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               NavigationUIVisibility="Hidden"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
	</Grid>
</Window>
