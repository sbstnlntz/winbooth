<!-- Root window markup hosting the splash screen and StartView. -->
<Window x:Class="winbooth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System.Windows;assembly=PresentationFramework"
        Title="Fotobox"
        Icon="Assets/logo.png"
        WindowStyle="None"
        WindowState="Normal"
        ResizeMode="NoResize"
        MaxHeight="{x:Static sys:SystemParameters.FullPrimaryScreenHeight}"
        MaxWidth="{x:Static sys:SystemParameters.FullPrimaryScreenWidth}">

	<!-- 
         We historically kept two columns, but the frame spans both,
         ensuring it always fills the entire window.
    -->
	<Grid Background="{DynamicResource FB_BackgroundBrush}">
        <Viewbox Stretch="Uniform" StretchDirection="Both">
            <Grid Width="1280" Height="800" Background="{DynamicResource FB_BackgroundBrush}">
                <!-- 
                     Central frame hosting CameraView, CollageView, etc.
                     It always occupies the full designated area.
                -->
                <Frame x:Name="MainFrame"
                       NavigationUIVisibility="Hidden"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"/>
            </Grid>
        </Viewbox>
	</Grid>
</Window>
